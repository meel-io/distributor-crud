{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "types": ["mocha"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "noResolve": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "outDir": "./lib"
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "src/*.test.ts"]
}
